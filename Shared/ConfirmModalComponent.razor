
@if (ShowConfirmation)
{
    <div class="modal fade show d-block" role="dialog" tabindex="-1" id="@id">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirm Delete</h5>
                    <button class="close" data-dismiss="modal" @onclick="() => OnConfirmationChanged(false)">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Are you sure you wand to delete?
                </div>
                <div class="modal-footer">
                    <button class="btn btn-primary" data-dismiss="modal" @onclick="() => OnConfirmationChanged(false)">Cancel</button>
                    <button class="btn btn-danger" @onclick="() => OnConfirmationChanged(true)">Delete</button>
                </div>
            </div>
        </div>
    </div>
}

